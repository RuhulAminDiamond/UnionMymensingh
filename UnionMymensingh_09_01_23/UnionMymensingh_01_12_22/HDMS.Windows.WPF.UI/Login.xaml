<Window x:Class="HDMS.Windows.WPF.UI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" SizeToContent="WidthAndHeight" Width="525">
    <Grid Margin="10,10,10,10">
        <Label Content="_User Name" Target="{Binding ElementName=txtUserName}" HorizontalAlignment="Left" Margin="0,-3,0,0" VerticalAlignment="Top" Width="129"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="23" Margin="215,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="282"/>
        <Label Target="{Binding ElementName=txtPassword}" Content="_Password" HorizontalAlignment="Left" Margin="0,34,0,0" VerticalAlignment="Top" Width="129"/>
        <Button x:Name="btnLogin" Content="_Login" HorizontalAlignment="Left" Margin="215,69,0,0" VerticalAlignment="Top" Width="124" Click="btnLogin_Click" IsCancel="True"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="215,34,0,0" VerticalAlignment="Top" Width="282"/>
    </Grid>
</Window>
